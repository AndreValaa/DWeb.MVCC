@model List<DWeb_MVC.Models.Produtos>
@{
    ViewData["Title"] = "Produtos do Grupo";
    var grupo = ViewBag.GrupoNome as string;
}

<h2 class="my-4">@grupo</h2>

<div class="row">
    @foreach (var produto in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card h-100">
                <img src="~/imagens/@(produto.Fotos.FirstOrDefault()?.NomeFicheiro ?? "noProduto.jpg")"
                     class="card-img-top" alt="@produto.Nome" />
                <div class="card-body">
                    <h5 class="card-title">@produto.Nome</h5>
                    <p class="card-text">@produto.Marca</p>
                    <p class="card-text"><strong>@produto.Preco.ToString("C")</strong></p>
                </div>
            </div>
        </div>
    }
</div>
