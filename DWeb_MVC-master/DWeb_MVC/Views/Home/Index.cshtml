                }

        .suggestions {
            z-index: 1000;
            width: 100%;
            background: white;
            border: 1px solid #ccc;
            border-radius: 0 0 4px 4px;
            max-height: 200px;
            overflow-y: auto;
            padding: 0;
            margin-top: -1px; /* Ensure the dropdown is right below the input field */
        }

            .suggestions li {
                padding: 10px;
                cursor: pointer;
                list-style: none; /* Remove list markers */
            }

                .suggestions li:hover {
                    background-color: #f8f9fa;
                }

        .input-group {
            position: relative; /* Ensure the input group is the reference for absolute positioning */
            width: 100%;
        }
    </style>
</head>
