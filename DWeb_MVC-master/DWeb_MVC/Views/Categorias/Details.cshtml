@model DWeb_MVC.Models.Categorias

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Categoria</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
    </dl>
</div>

<div>
    <h4>Produtos Associados</h4>
    <hr />
    @if (Model.ListaProdutos != null && Model.ListaProdutos.Any())
    {
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Nome</th>
                    <th>Marca</th>
                    <th>Preço</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var produto in Model.ListaProdutos)
                {
                    <tr>
                        <td>@produto.Nome</td>
                        <td>@produto.Marca</td>
                        <td>@produto.Preco.ToString("C")</td> <!-- Formata como moeda -->
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>Não há produtos associados a esta categoria.</p>
    }
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
