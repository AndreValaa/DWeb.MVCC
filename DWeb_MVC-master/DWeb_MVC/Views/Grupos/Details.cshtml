@model DWeb_MVC.Models.Grupos

@{
    ViewData["Title"] = "Detalhes do Grupo";
}

<h1 class="mb-4">Detalhes do Grupo</h1>

<div class="mb-3">
    <strong>Nome:</strong> @Model.Nome
</div>

<div class="mt-4">
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Editar</a>
    <a asp-action="Index" class="btn btn-secondary ms-2">Voltar</a>
</div>
