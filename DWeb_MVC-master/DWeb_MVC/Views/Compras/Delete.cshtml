@model DWeb_MVC.Models.Compras

@{
    ViewData["Title"] = "Delete";
}

<h1>Eliminar Compra</h1>

<h3>Tem a certeza que quer eliminar esta compra?</h3>
<div>
    <h4>Compras</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ProdutosComprados)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProdutosComprados)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PrecoTotal)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PrecoTotal)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.QuantidadeTotal)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.QuantidadeTotal)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DataCompra)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DataCompra)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a asp-action="Index">Voltar à lista</a>
    </form>
</div>
